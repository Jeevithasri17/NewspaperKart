@model NewspaperKart.CTSModel.Subscription
@*@{
        Layout = null;
    }*@



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h4>Subscription</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Title</label>
                    <input asp-for="Title" class="control-label" value="Deccan Chronicle" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubscriptionType" class="control-label">Subscription Type</label>
                    @*<input asp-for="SubscriptionType" class="form-control" />*@
                <select asp-for="SubscriptionType" class="form-control">
                    <option value="">Select</option>

                    <option value="Digital">Digital</option>
                    <option value="Print">Print</option>

                </select>

                    <span asp-validation-for="SubscriptionType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TimePeriod" class="control-label">Time Period</label>
                    @*<input asp-for="TimePeriod" class="form-control" />*@
                <select asp-for="TimePeriod" class="form-control" asp-items="ViewBag.TimePeriod">
                    <option value="">Select</option>

                    <option value="Monthly">Monthly</option>
                    <option value="Annual">Annual</option>

                </select>
                    <span asp-validation-for="TimePeriod" class="text-danger"></span>
                </div>
                <div class="form-group">
            <input type="submit" value="Subscribe" class="btn btn-outline-success" asp-action="Index" asp-controller="Payment" />
        </div>

                
            </form>
        </div>
    </div>

    <div>
        <a asp-action="SubscriptionList" class="btn btn-outline-dark">Back</a>
    </div>

</body>
</html>
