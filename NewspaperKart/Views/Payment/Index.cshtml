@model NewspaperKart.CTSModel.Subscription

@{
    ViewData["Title"] = "Index";
}

<div class="justify-content-xl-center" align="center">


    <h4>Payment</h4>
    <hr />
    <div class="">
        <div class="col-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Card Holder's Name</label>
                    <input class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Card Number</label>
                    <input class="form-control" type="password" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Expiry Date</label>
                    <input class="form-control" type="date" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">CVC / CVV</label>
                    <input class="form-control" type="password" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Pay" class="btn btn-outline-success" asp-action="Index" asp-controller="Home" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="AddCustomer" asp-controller="Customer" class="btn btn-outline-dark">Back</a>
    </div>


    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
